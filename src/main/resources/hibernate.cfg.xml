 <!DOCTYPE hibernate-configuration PUBLIC  
     "-//Hibernate/Hibernate Configuration DTD 3.0//EN"  
     "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<!-- DESENVOLVIMENTO -->
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/consultaTSE?autoReconnect=true</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLInnoDBDialect</property>
		<property name="hibernate.connection.driver_class">org.gjt.mm.mysql.Driver</property>


		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password"></property>


		<!-- Configuracao da manutenção da conexao -->
		<property name="hibernate.c3p0.min_size">3</property>
		<property name="hibernate.c3p0.max_size">50</property>
		<property name="hibernate.c3p0.timeout">1800</property>
		<property name="hibernate.c3p0.max_statements">50</property>
		<property name="hibernate.c3p0.idle_test_period">28680</property>

		<property name="hibernate.show_sql">false</property>
		<property name="hibernate.hbm2ddl.auto">none</property>
		<property name="hibernate.cache.provider_class">org.hibernate.cache.HashtableCacheProvider</property>
		<!-- Teste de manutenção de conexão <property name="hibernate.connection.provider_class">org.hibernate.connection.C3P0ConnectionProvider</property> -->
		<property name="c3p0.preferredTestQuery">SELECT 1</property>

	</session-factory>
</hibernate-configuration>
